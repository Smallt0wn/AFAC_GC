{{>layout/header}}

<div class="py-5 text-center">
    <h2><b>Sign Up Page</b></h2>
    <p class="lead">You should write down the appropriate content</p>
</div>

<div class="container">
    <div class="row g-5 justify-content-center">
        <div class="col-md-7 col-lg-8">
            <form action="/member/new" role="form" method="post">
                <div class="row g-3">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" id="mail" name="email" value="{{#memberFormDto}}{{memberFormDto.email}}{{/memberFormDto}}" placeholder="Type your school Email">
                        <!-- Mustache Syntax for Error Messages -->
                        <p class="fieldError">{{#emailError}} {{emailError}} {{/emailError}}</p>
                        <p class="fieldError">{{#errorMessage}} {{errorMessage}} {{/errorMessage}}</p>
                        <!--<button type="button" id="sendBtn" name="sendBtn">인증번호</button>
                        <div id="mail_number" name="mail_number">
                            <input type="text" name="number" id="number" style="width:250px; margin-top: -10px" placeholder="인증번호 입력">
                            <button type="button" name="confirmBtn" id="confirmBtn">이메일 인증</button>
                        </div>
                        <input type="hidden" id="Confirm"> -->
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Type Your Password">
                        <!-- Mustache Syntax for Error Messages -->
                        <p class="fieldError">{{#passwordError}} {{passwordError}} {{/passwordError}}</p>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" value="{{#memberFormDto}}{{memberFormDto.name}}{{/memberFormDto}}" placeholder="Type Your Name">
                        <!-- Mustache Syntax for Error Messages -->
                        <p class="fieldError">{{#nameError}} {{nameError}} {{/nameError}}</p>
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input type="text" class="form-control" name="phoneNumber" value="{{#memberFormDto}}{{memberFormDto.phoneNumber}}{{/memberFormDto}}" placeholder="Type Your PhoneNumber">
                        <!-- Mustache Syntax for Error Messages -->
                        <p class="fieldError">{{#phoneNumberError}} {{phoneNumberError}} {{/phoneNumberError}}</p>
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <input type="text" class="form-control" name="department" value="{{#memberFormDto}}{{memberFormDto.department}}{{/memberFormDto}}" placeholder="Type Full department">
                        <!-- Mustache Syntax for Error Messages -->
                        <p class="fieldError">{{#departmentError}} {{departmentError}} {{/departmentError}}</p>
                    </div>
                    <div class="form-group">
                        <label>Student Number</label>
                        <input type="text" class="form-control" name="studentNumber" value="{{#memberFormDto}}{{memberFormDto.studentNumber}}{{/memberFormDto}}" placeholder="Type your StudentNumber">
                        <!-- Mustache Syntax for Error Messages -->
                        <p class="fieldError">{{#studentNumberError}} {{studentNumberError}} {{/studentNumberError}}</p>
                    </div>
                </div>

                <hr class="my-4">

                <button type="submit" class="btn btn-secondary btn-lg">Sign Up</button>

                <hr class="my-4">

            </form>
        </div>
    </div>
</div>


{{>layout/footer}}